//- Все примеси в этом файле должны начинаться c имени блока (logo)

mixin logo(href, mods, newTag)

  //- Parameters:
  //-   href  {string} - link
  //-   mods  {string} - list of modificators
  //- Call:
        +logo('/')
          img(src='img/logo.svg', alt='Logo', width='64', height='15')
        +logo(false, 'mod')
          img(src='img/logo.svg', alt='Logo', width='64', height='15')
  -
    // list of modificators
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + '--' + modsList[i].trim();
      }
    }

  +b(newTag || 'a').logo(class=allMods, href=href)&attributes(attributes)
    block
