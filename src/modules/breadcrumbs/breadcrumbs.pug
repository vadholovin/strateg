mixin breadcrumbs(arr)

  //- @param {array} arr - list of breadcrumb chuncks
  //- 
  //- Call:
  //-   +breadcrumbs(['Главная', 'Раздел', 'Страница'])
  
  +b.UL.breadcrumbs&attributes(attributes)
    each crumb, index in arr
      if index < (arr.length - 1)
        +e.LI.item
          +e.A.link(href='#')!= crumb
      else
        +e.LI.item
          +b.SPAN.current!= crumb

